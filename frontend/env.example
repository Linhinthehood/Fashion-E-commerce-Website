# Frontend Environment Variables Example
# Copy this file to .env and update the values according to your environment

# ===========================================
# API Configuration
# ===========================================

# Main API Gateway URL (primary endpoint for all API calls)
VITE_API_URL=http://localhost:3000/api

# Direct service URLs (for development/testing purposes)
VITE_USER_SERVICE_URL=http://localhost:3001/api
VITE_PRODUCT_SERVICE_URL=http://localhost:3002/api
VITE_ORDER_SERVICE_URL=http://localhost:3003/api

# ===========================================
# Environment Configuration
# ===========================================

# Application environment
VITE_NODE_ENV=development

# Application title and branding
VITE_APP_TITLE=Fashion Ecommerce
VITE_APP_DESCRIPTION=Premium Fashion Store
VITE_APP_VERSION=1.0.0

# ===========================================
# Feature Flags
# ===========================================

# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false
VITE_ENABLE_DEBUG_MODE=true

# ===========================================
# UI/UX Configuration
# ===========================================

# Default pagination settings
VITE_DEFAULT_PAGE_SIZE=12
VITE_MAX_PAGE_SIZE=100

# Default currency and locale
VITE_DEFAULT_CURRENCY=VND
VITE_DEFAULT_LOCALE=vi-VN

# Image optimization settings
VITE_MAX_IMAGE_SIZE=5242880
VITE_SUPPORTED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# ===========================================
# Authentication Configuration
# ===========================================

# Token storage key
VITE_AUTH_TOKEN_KEY=token
VITE_AUTH_USER_KEY=user

# Session timeout (in minutes)
VITE_SESSION_TIMEOUT=60

# ===========================================
# External Services (Optional)
# ===========================================

# Google Analytics (if enabled)
VITE_GA_TRACKING_ID=

# Sentry Error Tracking (if enabled)
VITE_SENTRY_DSN=

# Cloudinary for image uploads (if needed)
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_UPLOAD_PRESET=

# ===========================================
# Development Tools
# ===========================================

# Enable API request logging
VITE_ENABLE_API_LOGGING=true

# Mock API for development
VITE_USE_MOCK_API=false

# API timeout (in milliseconds)
VITE_API_TIMEOUT=10000

# ===========================================
# Build Configuration
# ===========================================

# Build output directory
VITE_BUILD_DIR=dist

# Enable source maps in production
VITE_GENERATE_SOURCEMAP=false

# ===========================================
# Production URLs (update for production)
# ===========================================

# Production API Gateway URL
# VITE_API_URL=https://api.yourdomain.com/api

# Production service URLs
# VITE_USER_SERVICE_URL=https://user-api.yourdomain.com/api
# VITE_PRODUCT_SERVICE_URL=https://product-api.yourdomain.com/api
# VITE_ORDER_SERVICE_URL=https://order-api.yourdomain.com/api

# ===========================================
# Security Configuration
# ===========================================

# Content Security Policy
VITE_CSP_REPORT_URI=

# Enable HTTPS in production
VITE_FORCE_HTTPS=false

# ===========================================
# Performance Configuration
# ===========================================

# Enable service worker
VITE_ENABLE_SERVICE_WORKER=false

# Cache configuration
VITE_CACHE_DURATION=3600000

# Bundle analyzer
VITE_BUNDLE_ANALYZE=false
